<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
    <!-- Custom Styles -->
    <%= stylesheet_link_tag "application", "home", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %> <!-- Importmap tag loads JavaScript modules -->
  </head>
  <body>
    <% if user_signed_in? %>
      <%= render "home/header" %> 
    <% end %>
    <div class="container my-container">
      <% if notice %>
        <%= render 'layouts/alerts' %>
      <% end %>
      <%= yield %>
    </div>
    <!-- Bootstrap Bundle -->
    
    <!-- Custom Scripts -->
    <!-- These scripts should be loaded using Importmap or as module imports -->
    <!-- <%= javascript_include_tag "textarea_auto_resize.js", 
                                    "scroll_back.js", 
                                    "init_dropdowns.js",
                                    "clear_comment_prompt.js",
                                    type: "module", "data-turbo-track": "reload", defer: true %> -->
  </body>
</html>
