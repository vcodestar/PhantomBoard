<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <!-- Brand -->
    <%= link_to posts_path, class: "navbar-brand" do %>
      <%= image_tag('logo.png', alt: 'GhostPost Logo', class: 'logo-class') %>
    <% end %>
    

    <!-- Toggler for Mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Left-aligned Links -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to posts_path, class: "nav-link" do %>
            <i class="fa-solid fa-house"></i> Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to home_about_path, class: "nav-link" do %>
            <i class="fa-solid fa-info-circle"></i> About
          <% end %>
        </li>

        <% if current_user.admin? %>
          <li class="nav-item">
            <%= link_to admin_dashboard_path, class: "nav-link" do %>
              <i class="fa-solid fa-cogs"></i> Admin Dashboard
            <% end %>
          </li>
        <% end %>
      </ul>

      <!-- Right-aligned Links -->
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to edit_user_registration_path, class: "nav-link" do %>
              <i class="fa-solid fa-user-pen"></i> Edit Profile
            <% end %>
          </li>
          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "nav-link btn btn-link" do %>
              <i class="fa-solid fa-sign-out-alt"></i> Sign Out
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
